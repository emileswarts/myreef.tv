<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span4">
		<section>
		<h1>
			<%= link_to (gravatar_for @user, 100) %>
			<%= @user.name %>
		</h1>
		</section>
	</aside>

	<%= debug @creatures  %>
	<% if @fishtank_count == 0 %>
		You have no fishtanks! 
		<%= link_to "Add one", new_fishtank_path(current_user) %>
	<% end %>
</div>
