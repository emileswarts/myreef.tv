 <% content_for :custom_scripts do %>
  <script type="text/javascript">
    $(function() {
			$('.datepicker').datepicker({
					"format": "yyyy-mm-dd",
					"autoclose": true,
					"todayBtn": true
				});
    });
  </script>
<% end %>

<%= form_for @creature, :html => { :multipart => true } do |f| %>
  <% if @creature.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@creature.errors.count, "error") %> prohibited this creature from being saved:</h2>

      <ul>
      <% @creature.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <%= f.label :name %><br />
    <%= f.text_field :name %>

    <%= f.label :photo %><br />
    <%= f.file_field :photo %>

	<%= f.label :date_aquired, "Date aquired" %>
	<%= f.text_field :date_aquired, :class => "datepicker"  %><br />

    <%= f.label :scientific_name %><br />
    <%= f.text_field :scientific_name %>

	<%= f.hidden_field :fishtank_id, :value => params[:fishtank_id] %><br />

	<%= f.label :tag_list %><br />
	<%= f.text_field :tag_list %><br />

	<%= image_tag @creature.photo.url(:thumb) %><br />

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
