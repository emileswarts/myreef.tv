<p id="notice"><%= notice %></p>

<div class="row">
		<div class="span8">
				<div class="row">
						<h1><strong><%= @creature.name %></strong> 
								<% unless @creature.scientific_name.nil? %>
										(<em><%= @creature.scientific_name %></em>)
								<% end %>
</h1>
						<%= link_to (image_tag @creature.photo(:medium)), :rel => "lightbox" %>
						<div class="span6">

								<p>Date aquired: <%= @creature.date_aquired %></p>
								<p>Temperament: <%= @creature.temperament %></p>

						</div>
				</div>
		<% if signed_in? %>
				<%= link_to 'Edit', edit_fishtank_creature_path(current_user) %> |
				<%= link_to 'Back', creatures_path %>
				<%= link_to "delete", @creature, method: :delete, :class => 'btn btn-danger', data: { confirm: "Are you sure?" } %>
		<% end %>
		</div>

</div>
<div style='clear:both'><br /><br /><br /><br /></div>
