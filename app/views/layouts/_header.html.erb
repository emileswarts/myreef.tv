<div class="navbar navbar-inverse navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container">
			<%= link_to "reeftank.me", root_path, class: "brand" %>
			<nav>
				<ul class="nav pull-right">
					<li><%= link_to "Creatures", creatures_path %></li>
					<% if signed_in? %>
						<li id="fat-menu" class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown">  <b class="caret"></b></a>
							<ul class="dropdown-menu">
								<li><%= link_to "Profile", current_user %></li>
								<li><%= link_to "Settings", edit_user_path(current_user) %></li>
								<li><%= link_to "Fish tanks", edit_fishtank_path(current_user) %></li>
								<li class="divider"></li>
								<li><%= link_to "Sign out", signout_path, method: "delete" %></li>
							</ul>
						</li>
					<% else %>
						<li><%= link_to "Sign in", signin_path %></li>
					<% end %>

					<% if signed_in? %>
						<li><%= link_to "Users", users_path %></li>
						<li id="fat-menu" class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown">
								Account <b class="caret"></b>
							</a>
							<ul class="dropdown-menu">
								<li><%= link_to "Home", current_user %></li>
								<li><%= link_to "Edit", edit_user_path(current_user) %></li>
								<li class="divider"></li>
								<li><%= link_to "Sign out", signout_path, method: "delete" %></li>
							</ul>
						</li>
					<% end %>
					<li>
					<%= form_tag(creatures_path, :class => "navbar-search pull-left", :method => 'get') do %>
							<%= text_field_tag :q, params[:q], :placeholder => "Search", :class => "search-query"  %>
							<%= submit_tag "Go", :name => nil, :class => "btn btn-primary"  %>
					<% end %>
					</li>
				</ul>
			</nav>
		</div>
	</div>
	</div>
</div>
